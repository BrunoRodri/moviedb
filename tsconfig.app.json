{
  "compilerOptions": {
    "target": "ESNext", // Define o target para ESNext (última versão do ECMAScript)
    "module": "ESNext", // Usa módulos ESNext
    "moduleResolution": "node", // Garante que o TypeScript reconheça módulos do node_modules
    "types": ["vite/client", "swiper"], // Adiciona os tipos do Vite e do Swiper
    "jsx": "react-jsx", // Suporte para JSX
    "strict": true, // Ativa todas as verificações de tipo estritas
    "esModuleInterop": true, // Permite a importação de módulos CommonJS
    "skipLibCheck": true, // Ignora a verificação de tipos nas bibliotecas
    "forceConsistentCasingInFileNames": true, // Garante consistência no uso de maiúsculas/minúsculas
    "outDir": "./dist", // Define a pasta de saída para os arquivos compilados
    "rootDir": "./src" // Define a pasta raiz para os arquivos TypeScript
  },
  "include": ["src/**/*"], // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules da compilação
}